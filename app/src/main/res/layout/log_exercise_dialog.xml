<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:hintTextColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        app:boxBackgroundColor="@color/white"
        android:hint="@string/exercise_sets_ammount_dialog">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sets_edit_text"
            android:layout_width="match_parent"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:hintTextColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        app:boxBackgroundColor="@color/white"
        android:layout_marginBottom="8dp"
        android:hint="@string/exercise_reps_ammount_dialog">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reps_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/cardview_dark_background"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        app:boxBackgroundColor="@color/white"
        android:layout_marginBottom="8dp"
        android:hint="@string/exercise_weight_ammount_dialog">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weight_edit_text"
            android:layout_width="match_parent"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>